          "children": [
            {
              "type": "text",
              "value": "Checks if the configuration file for the specified package exists, and if not, copy over the default configuration.  If the configuration file looks like it has already been edited, we do not write over it, but instead write a file alongside it named "
            },
            {
              "type": "inlineCode",
              "value": "pkg.version.cfg"
            },
            {
              "type": "text",
              "value": " as a \"template\" for the user."
            }
          ],
          "type": "paragraph"
        }
