              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "The name of a specific package to test, e.g. 'io.fits' or 'utils'. Accepts comma separated string to specify multiple packages. If nothing is specified all default tests are run."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "package",
              "type": "Param",
              "type_": "str, optional"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "Additional arguments to be passed to "
                    },
                    {
                      "type": "inlineCode",
                      "value": "pytest.main"
                    },
                    {
                      "type": "text",
                      "value": " in the "
                    },
                    {
                      "type": "inlineCode",
                      "value": "args"
                    },
                    {
                      "type": "text",
                      "value": " keyword argument."
