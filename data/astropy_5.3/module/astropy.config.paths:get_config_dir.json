                    {
                      "type": "text",
                      "value": "Name of the root configuration directory. For example, if "
                    },
                    {
                      "type": "inlineCode",
                      "value": "rootname =\n'pkgname'"
                    },
                    {
                      "type": "text",
                      "value": ", the configuration directory would be "
                    },
                    {
                      "type": "inlineCode",
                      "value": "<home>/.pkgname/"
                    },
                    {
                      "type": "text",
                      "value": " rather than "
                    },
                    {
                      "type": "inlineCode",
                      "value": "<home>/.astropy"
                    },
                    {
                      "type": "text",
                      "value": " (depending on platform)."
                    }
                  ],
