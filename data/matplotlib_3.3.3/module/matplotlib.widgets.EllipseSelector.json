                  "_line": "    import numpy as np",
                  "_number": 4,
                  "_offset": 4
                },
                {
                  "_line": "    import matplotlib.pyplot as plt",
                  "_number": 5,
                  "_offset": 4
                },
                {
                  "_line": "    from matplotlib.widgets import EllipseSelector",
                  "_number": 6,
                  "_offset": 4
                },
                {
                  "_line": "",
                  "_number": 7,
                  "_offset": 4
                },
                {
                  "_line": "    def onselect(eclick, erelease):",
                  "_number": 8,
                  "_offset": 4
                },
                {
                  "_line": "        \"eclick and erelease are matplotlib events at press and release.\"",
                  "_number": 9,
                  "_offset": 4
                },
                {
                  "_line": "        print('startposition: (%f, %f)' % (eclick.xdata, eclick.ydata))",
                  "_number": 10,
                  "_offset": 4
                },
                {
                  "_line": "        print('endposition  : (%f, %f)' % (erelease.xdata, erelease.ydata))",
                  "_number": 11,
                  "_offset": 4
                },
                {
                  "_line": "        print('used button  : ', eclick.button)",
                  "_number": 12,
                  "_offset": 4
                },
                {
                  "_line": "",
                  "_number": 13,
                  "_offset": 4
                },
                {
                  "_line": "    def toggle_selector(event):",
                  "_number": 14,
                  "_offset": 4
                },
                {
                  "_line": "        print(' Key pressed.')",
                  "_number": 15,
                  "_offset": 4
                },
                {
                  "_line": "        if event.key in ['Q', 'q'] and toggle_selector.ES.active:",
                  "_number": 16,
                  "_offset": 4
                },
                {
                  "_line": "            print('EllipseSelector deactivated.')",
                  "_number": 17,
                  "_offset": 4
                },
                {
                  "_line": "            toggle_selector.RS.set_active(False)",
                  "_number": 18,
                  "_offset": 4
                },
                {
                  "_line": "        if event.key in ['A', 'a'] and not toggle_selector.ES.active:",
                  "_number": 19,
                  "_offset": 4
                },
                {
                  "_line": "            print('EllipseSelector activated.')",
                  "_number": 20,
                  "_offset": 4
                },
                {
                  "_line": "            toggle_selector.ES.set_active(True)",
                  "_number": 21,
                  "_offset": 4
                },
                {
                  "_line": "",
                  "_number": 22,
                  "_offset": 4
                },
                {
                  "_line": "    x = np.arange(100.) / 99",
                  "_number": 23,
                  "_offset": 4
                },
                {
                  "_line": "    y = np.sin(x)",
                  "_number": 24,
                  "_offset": 4
                },
                {
                  "_line": "    fig, ax = plt.subplots()",
                  "_number": 25,
                  "_offset": 4
                },
                {
                  "_line": "    ax.plot(x, y)",
                  "_number": 26,
                  "_offset": 4
