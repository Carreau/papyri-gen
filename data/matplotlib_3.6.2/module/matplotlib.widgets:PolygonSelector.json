    "Parameters": {
      "children": [
        {
          "children": [
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "The parent Axes for the widget."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "ax",
              "type": "Param",
              "type_": "`~matplotlib.axes.Axes`"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "When a polygon is completed or modified after completion, the "
                    },
                    {
                      "children": [
                        {
                          "type": "text",
                          "value": "onselect"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "type": "text",
                      "value": " function is called and passed a list of the vertices as "
                    },
                    {
                      "type": "inlineCode",
                      "value": "(xdata, ydata)"
                    },
                    {
                      "type": "text",
                      "value": " tuples."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "onselect",
              "type": "Param",
              "type_": "function"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "Whether to use blitting for faster drawing (if supported by the backend). See the tutorial "
                    },
                    {
                      "type": "inlineCode",
                      "value": "/tutorials/advanced/blitting"
                    },
                    {
                      "type": "text",
                      "value": " for details."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "useblit",
              "type": "Param",
              "type_": "bool, default: False"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "Properties with which the line is drawn, see "
                    },
                    {
                      "anchor": null,
                      "exists": true,
                      "kind": "module",
                      "reference": {
                        "kind": "api",
                        "module": "matplotlib.lines",
                        "path": "matplotlib.lines:Line2D",
                        "type": "RefInfo",
                        "version": "*"
                      },
                      "type": "Link",
                      "value": "matplotlib.lines.Line2D"
                    },
                    {
                      "type": "text",
                      "value": " for valid properties. Default:"
                    }
                  ],
                  "type": "paragraph"
                },
                {
                  "children": [
                    {
                      "children": [
                        {
                          "type": "inlineCode",
                          "value": "dict(color='k', linestyle='-', linewidth=2, alpha=0.5)"
                        }
                      ],
                      "type": "paragraph"
                    }
                  ],
                  "type": "blockquote"
                }
              ],
              "param": "props",
              "type": "Param",
              "type_": "dict, optional"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "Artist properties for the markers drawn at the vertices of the polygon. See the marker arguments in "
                    },
                    {
                      "anchor": null,
                      "exists": true,
                      "kind": "module",
                      "reference": {
                        "kind": "api",
                        "module": "matplotlib.lines",
                        "path": "matplotlib.lines:Line2D",
                        "type": "RefInfo",
                        "version": "*"
                      },
                      "type": "Link",
                      "value": "matplotlib.lines.Line2D"
                    },
                    {
                      "type": "text",
                      "value": " for valid properties.  Default values are defined in "
                    },
                    {
                      "type": "inlineCode",
                      "value": "mpl.rcParams"
                    },
                    {
                      "type": "text",
                      "value": " except for the default value of "
                    },
                    {
                      "type": "inlineCode",
                      "value": "markeredgecolor"
                    },
                    {
                      "type": "text",
                      "value": " which will be the same as the "
                    },
                    {
                      "type": "inlineCode",
                      "value": "color"
                    },
                    {
                      "type": "text",
                      "value": " property in "
                    },
                    {
                      "children": [
                        {
                          "type": "text",
                          "value": "props"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "type": "text",
                      "value": "."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "handle_props",
              "type": "Param",
              "type_": "dict, optional"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "A vertex is selected (to complete the polygon or to move a vertex) if the mouse click is within "
                    },
                    {
                      "children": [
                        {
                          "type": "text",
                          "value": "grab_range"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "type": "text",
                      "value": " pixels of the vertex."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "grab_range",
              "type": "Param",
              "type_": "float, default: 10"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "If "
                    },
                    {
                      "domain": null,
                      "role": null,
                      "type": "Directive",
                      "value": "True"
                    },
                    {
                      "type": "text",
                      "value": ", a bounding box will be drawn around the polygon selector once it is complete. This box can be used to move and resize the selector."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "draw_bounding_box",
              "type": "Param",
              "type_": "bool, optional"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "Properties to set for the box handles. See the documentation for the "
                    },
                    {
                      "children": [
                        {
                          "type": "text",
                          "value": "handle_props"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "type": "text",
                      "value": " argument to "
                    },
                    {
                      "domain": null,
                      "role": null,
                      "type": "Directive",
                      "value": "RectangleSelector"
                    },
                    {
                      "type": "text",
