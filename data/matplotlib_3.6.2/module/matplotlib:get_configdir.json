    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "The directory is chosen as follows:"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "children": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "If the MPLCONFIGDIR environment variable is supplied, choose that."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "spread": false,
              "type": "listItem"
            },
            {
              "children": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "On Linux, follow the XDG specification and look first in    "
                    },
                    {
                      "type": "inlineCode",
                      "value": "$XDG_CONFIG_HOME"
                    },
                    {
                      "type": "text",
                      "value": ", if defined, or "
                    },
                    {
                      "type": "inlineCode",
                      "value": "$HOME/.config"
                    },
                    {
                      "type": "text",
                      "value": ".  On other    platforms, choose "
                    },
                    {
                      "type": "inlineCode",
                      "value": "$HOME/.matplotlib"
                    },
                    {
                      "type": "text",
                      "value": "."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "spread": false,
              "type": "listItem"
            },
            {
              "children": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "If the chosen directory exists and is writable, use that as the    configuration directory."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "spread": false,
              "type": "listItem"
            },
            {
              "children": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "Else, create a temporary directory, and use it as the configuration    directory."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "spread": false,
              "type": "listItem"
            }
          ],
          "ordered": true,
          "spread": false,
          "start": 1,
          "type": "list"
        }
      ],
