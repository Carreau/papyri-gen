            {
              "type": "text",
              "value": "The parameters "
            },
            {
              "children": [
                {
                  "type": "text",
                  "value": "detrend"
                }
              ],
              "type": "emphasis"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "children": [
                {
                  "type": "text",
                  "value": "scale_by_freq"
                }
              ],
              "type": "emphasis"
            },
            {
              "type": "text",
              "value": " do only apply when "
            },
            {
              "children": [
                {
                  "type": "text",
                  "value": "mode"
                }
              ],
              "type": "emphasis"
            },
            {
              "type": "text",
              "value": " is set to 'psd'."
            }
          ],
          "type": "paragraph"
        }
      ],
