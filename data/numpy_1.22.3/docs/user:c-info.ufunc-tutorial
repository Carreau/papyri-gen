oid)\n    {\n        PyObject *m, *logit, *d;\n        m = PyModule_Create(&moduledef);\n        if (!m) {\n            return NULL;\n        }\n\n        import_array();\n        import_umath();\n\n        logit = PyUFunc_FromFuncAndData(funcs, NULL, types, 1, 1, 1,\n                                        PyUFunc_None, \"logit\",\n                                        \"logit_docstring\", 0);\n\n        d = PyModule_GetDict(m);\n\n        PyDict_SetItemString(d, \"logit\", logit);\n        Py_DECREF(logit);\n\n        return m;\n    }",
