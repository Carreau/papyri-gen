    "Extended Summary": {
      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "Computes the sample points and weights for Gauss-Chebyshev quadrature. These sample points and weights will correctly integrate polynomials of degree "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "2*deg - 1"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " or less over the interval "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "[-1, 1]"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " with the weight function "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "f(x) = 1/\\sqrt{1 - x^2}"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": "."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        }
      ],
      "title": null
    },
    "Methods": {
      "children": [],
      "title": null
    },
    "Notes": {
      "children": [
        {
          "data": {
            "children": [],
            "kind": "versionadded",
            "title": "1.7.0"
          },
          "type": "Admonition"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "The results have only been tested up to degree 100, higher degrees may be problematic. For Gauss-Chebyshev there are closed form solutions for the sample points and weights. If n = "
                },
                "type": "Words"
              },
              {
                "data": {
                  "domain": null,
                  "role": null,
                  "value": "deg"
                },
                "type": "Directive"
              },
              {
                "data": {
                  "value": ", then"
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "x_i = \\cos(\\pi (2 i - 1) / (2 n))"
          },
          "type": "BlockMath"
        },
        {
          "data": {
            "value": "w_i = \\pi / n"
          },
          "type": "BlockMath"
        }
      ],
      "title": null
    },
