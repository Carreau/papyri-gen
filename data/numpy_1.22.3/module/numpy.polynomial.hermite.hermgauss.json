    "Extended Summary": {
      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "Computes the sample points and weights for Gauss-Hermite quadrature. These sample points and weights will correctly integrate polynomials of degree "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "2*deg - 1"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " or less over the interval "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "[-\\inf, \\inf]"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " with the weight function "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "f(x) = \\exp(-x^2)"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": "."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        }
      ],
      "title": null
    },
    "Methods": {
      "children": [],
      "title": null
    },
    "Notes": {
      "children": [
        {
          "data": {
            "children": [],
            "kind": "versionadded",
            "title": "1.7.0"
          },
          "type": "Admonition"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "The results have only been tested up to degree 100, higher degrees may be problematic. The weights are determined by using the fact that"
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "w_k = c / (H'_n(x_k) * H_{n-1}(x_k))"
          },
          "type": "BlockMath"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "where "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "c"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " is a constant independent of "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "k"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " and "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "x_k"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " is the k'th root of "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "H_n"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": ", and then scaling the results to get the right value when integrating 1."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        }
      ],
      "title": null
    },
