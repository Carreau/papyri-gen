  "example_section_data": {
    "children": [
      {
        "type": "code",
        "value": "x = np.array([1, 2, 3, 5])\nN = 3\nnp.vander(x, N)"
      },
      {
        "type": "code",
        "value": "np.column_stack([x**(N-1-i) for i in range(N)])"
      },
      {
        "type": "code",
        "value": "x = np.array([1, 2, 3, 5])\nnp.vander(x)"
      },
      {
        "type": "code",
        "value": "np.vander(x, increasing=True)"
      },
      {
        "type": "text",
        "value": "The determinant of a square Vandermonde matrix is the product\nof the differences between the values of the input vector:"
      },
      {
        "type": "code",
        "value": "np.linalg.det(np.vander(x))"
      },
      {
        "type": "code",
        "value": "(5-3)*(5-2)*(5-1)*(3-2)*(3-1)*(2-1)"
      }
    ],
