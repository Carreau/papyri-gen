      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "If x_j and y_j are Fourier coefficients of periodic functions x and y, respectively, then:    "
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "y_j = pow(sqrt(-1)*j*2*pi/period, order) * x_j\ny_0 = 0 if order is not 0."
          },
          "type": "BlockVerbatim"
        }
      ],
      "level": 0,
      "target": null,
      "title": null
    },
    "Methods": {
      "children": [],
      "level": 0,
      "target": null,
      "title": null
    },
    "Notes": {
      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "If "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "sum(x, axis=0) = 0"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " then "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "diff(diff(x, k), -k) == x"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " (within numerical accuracy)."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "For odd order and even "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "len(x)"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": ", the Nyquist mode is taken zero."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null
    },
