              },
              {
                "data": {
                  "value": [
                    "sum(x, axis=0) == 0"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " and "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "n = len(x)"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is odd, then "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "tilbert(itilbert(x)) == x"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
