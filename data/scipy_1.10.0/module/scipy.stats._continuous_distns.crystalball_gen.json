    "Notes": {
      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "The probability density function for "
                },
                "type": "Words"
              },
              {
                "data": {
                  "domain": null,
                  "role": null,
                  "value": "crystalball"
                },
                "type": "Directive"
              },
              {
                "data": {
                  "value": " is:"
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "f(x, \\beta, m) =  \\begin{cases}\n                    N \\exp(-x^2 / 2),  &\\text{for } x > -\\beta\\\\\n                    N A (B - x)^{-m}  &\\text{for } x \\le -\\beta\n                  \\end{cases}"
          },
          "type": "BlockMath"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "where "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "A = (m / |\\beta|)^m  \\exp(-\\beta^2 / 2)"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": ", "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "B = m/|\\beta| - |\\beta|"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " and "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "N"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " is a normalisation constant."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "domain": null,
                  "role": null,
                  "value": "crystalball"
                },
                "type": "Directive"
              },
              {
                "data": {
                  "value": " takes "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "\\beta > 0"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " and "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "m > 1"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " as shape parameters.  "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "\\beta"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " defines the point where the pdf changes from a power-law to a Gaussian distribution.  "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "m"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " is the power of the power-law tail."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        }
      ],
