    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "If x_j and y_j are Fourier coefficients of periodic functions x and y, respectively, then    "
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "code",
          "value": "y_j = pow(sqrt(-1)*j*2*pi/period, order) * x_j\ny_0 = 0 if order is not 0."
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
    "Methods": {
      "children": [],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "If "
            },
            {
              "type": "inlineCode",
              "value": "sum(x, axis=0) = 0"
            },
            {
              "type": "text",
              "value": " then "
            },
            {
              "type": "inlineCode",
              "value": "diff(diff(x, k), -k) == x"
            },
            {
              "type": "text",
              "value": " (within numerical accuracy)."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "For odd order and even "
            },
            {
              "type": "inlineCode",
              "value": "len(x)"
            },
            {
              "type": "text",
              "value": ", the Nyquist mode is taken zero."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
