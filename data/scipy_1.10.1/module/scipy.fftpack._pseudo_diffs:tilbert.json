    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "If x_j and y_j are Fourier coefficients of periodic functions x and y, respectively, then      "
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "code",
          "value": "y_j = sqrt(-1)*coth(j*h*2*pi/period) * x_j\ny_0 = 0"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
    "Methods": {
      "children": [],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "If "
            },
            {
              "type": "inlineCode",
              "value": "sum(x, axis=0) == 0"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineCode",
              "value": "n = len(x)"
            },
            {
              "type": "text",
              "value": " is odd, then "
            },
            {
              "type": "inlineCode",
              "value": "tilbert(itilbert(x)) == x"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "If "
            },
            {
              "type": "inlineCode",
              "value": "2 * pi * h / period"
            },
            {
              "type": "text",
              "value": " is approximately 10 or larger, then numerically "
            },
            {
              "type": "inlineCode",
              "value": "tilbert == hilbert"
            },
            {
              "type": "text",
              "value": " (theoretically oo-Tilbert == Hilbert)."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "For even "
            },
            {
              "type": "inlineCode",
              "value": "len(x)"
            },
            {
              "type": "text",
              "value": ", the Nyquist mode of "
            },
            {
              "type": "inlineCode",
              "value": "x"
            },
            {
              "type": "text",
              "value": " is taken zero."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
