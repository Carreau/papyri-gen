    "children": [
      {
        "type": "code",
        "value": "import numpy as np\nfrom scipy.linalg import polar\na = np.array([[1, -1], [2, 4]])\nu, p = polar(a)\nu"
      },
      {
        "type": "code",
        "value": "p"
      },
      {
        "type": "text",
        "value": "A non-square example, with m < n:"
      },
      {
        "type": "code",
        "value": "b = np.array([[0.5, 1, 2], [1.5, 3, 4]])\nu, p = polar(b)\nu"
      },
      {
        "type": "code",
        "value": "p"
      },
      {
        "type": "code",
        "value": "u.dot(p)   # Verify the decomposition."
      },
      {
        "type": "code",
        "value": "u.dot(u.T)   # The rows of u are orthonormal."
      },
      {
        "type": "text",
        "value": "Another non-square example, with m > n:"
      },
      {
        "type": "code",
        "value": "c = b.T\nu, p = polar(c)\nu"
      },
      {
        "type": "code",
        "value": "p"
      },
      {
        "type": "code",
        "value": "u.dot(p)   # Verify the decomposition."
      },
      {
        "type": "code",
        "value": "u.T.dot(u)  # The columns of u are orthonormal."
      }
    ],
