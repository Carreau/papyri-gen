      {
        "type": "text",
        "value": "Given `a` and `q` solve for `x`:"
      },
      {
        "type": "code",
        "value": "import numpy as np\nfrom scipy import linalg\na = np.array([[-3, -2, 0], [-1, -1, 0], [0, -5, -1]])\nb = np.array([2, 4, -1])\nq = np.eye(3)\nx = linalg.solve_continuous_lyapunov(a, q)\nx"
      },
      {
        "type": "code",
        "value": "np.allclose(a.dot(x) + x.dot(a.T), q)"
      }
    ],
