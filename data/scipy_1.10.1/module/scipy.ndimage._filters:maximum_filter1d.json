    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "This function implements the MAXLIST algorithm , as described by Richard Harter , and has a guaranteed O(n) performance, "
            },
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "n"
            },
            {
              "type": "text",
              "value": " being the "
            },
            {
              "anchor": null,
              "exists": true,
              "kind": "local",
              "reference": {
                "kind": "local",
                "module": null,
                "path": "input",
                "type": "RefInfo",
                "version": null
              },
              "type": "Link",
              "value": "input"
            },
            {
              "type": "text",
              "value": " length, regardless of filter size."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
