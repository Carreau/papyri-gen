    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "The morphological gradient is calculated as the difference between a dilation and an erosion of the input with a given structuring element."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
