    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "This is defined as:"
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "math",
          "value": "x^\\underline n = (x)_n = x (x-1) \\cdots (x-n+1)"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "This can more efficiently calculate ratios of factorials, since:"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "n!/m! == falling_factorial(n, n-m)"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "where n >= m"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "skipping the factors that cancel out"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "the usual factorial n! == ff(n, n)"
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
