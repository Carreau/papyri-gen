          "children": [
            {
              "type": "text",
              "value": "The Exponential window is defined as"
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "math",
          "value": "w(n) = e^{-|n-center| / \\tau}"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
