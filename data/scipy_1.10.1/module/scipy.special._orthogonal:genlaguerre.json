      "type": "Section"
    },
    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "For fixed "
            },
            {
              "type": "inlineMath",
              "value": "\\alpha"
            },
            {
              "type": "text",
              "value": ", the polynomials "
            },
            {
              "type": "inlineMath",
              "value": "L_n^{(\\alpha)}"
            },
            {
              "type": "text",
              "value": " are orthogonal over "
            },
            {
              "type": "inlineMath",
              "value": "[0, \\infty)"
            },
            {
              "type": "text",
              "value": " with weight function "
            },
            {
              "type": "inlineMath",
              "value": "e^{-x}x^\\alpha"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "The Laguerre polynomials are the special case where "
            },
            {
              "type": "inlineMath",
              "value": "\\alpha\n= 0"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        }
      ],
