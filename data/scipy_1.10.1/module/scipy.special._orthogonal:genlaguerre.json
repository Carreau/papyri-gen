    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "Defined to be the solution of"
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "math",
          "value": "x\\frac{d^2}{dx^2}L_n^{(\\alpha)}\n  + (\\alpha + 1 - x)\\frac{d}{dx}L_n^{(\\alpha)}\n  + nL_n^{(\\alpha)} = 0,"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "where "
            },
            {
              "type": "inlineMath",
              "value": "\\alpha > -1"
            },
            {
              "type": "text",
              "value": "; "
            },
            {
              "type": "inlineMath",
              "value": "L_n^{(\\alpha)}"
            },
            {
              "type": "text",
              "value": " is a polynomial of degree "
            },
            {
              "type": "inlineMath",
              "value": "n"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
    "Methods": {
      "children": [],
      "level": 0,
      "target": null,
