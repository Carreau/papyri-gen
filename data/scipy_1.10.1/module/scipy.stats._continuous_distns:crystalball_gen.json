    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "The probability density function for "
            },
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "crystalball"
            },
            {
              "type": "text",
              "value": " is:"
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "math",
          "value": "f(x, \\beta, m) =  \\begin{cases}\n                    N \\exp(-x^2 / 2),  &\\text{for } x > -\\beta\\\\\n                    N A (B - x)^{-m}  &\\text{for } x \\le -\\beta\n                  \\end{cases}"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "where "
            },
            {
              "type": "inlineMath",
              "value": "A = (m / |\\beta|)^m  \\exp(-\\beta^2 / 2)"
            },
            {
              "type": "text",
              "value": ", "
            },
            {
              "type": "inlineMath",
              "value": "B = m/|\\beta| - |\\beta|"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "N"
            },
            {
              "type": "text",
              "value": " is a normalisation constant."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "crystalball"
            },
            {
              "type": "text",
              "value": " takes "
            },
            {
              "type": "inlineMath",
              "value": "\\beta > 0"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "m > 1"
            },
            {
              "type": "text",
              "value": " as shape parameters.  "
            },
            {
              "type": "inlineMath",
              "value": "\\beta"
            },
            {
              "type": "text",
              "value": " defines the point where the pdf changes from a power-law to a Gaussian distribution.  "
            },
            {
              "type": "inlineMath",
              "value": "m"
            },
            {
              "type": "text",
              "value": " is the power of the power-law tail."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
