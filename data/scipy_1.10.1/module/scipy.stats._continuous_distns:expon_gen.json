    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "The probability density function for "
            },
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "expon"
            },
            {
              "type": "text",
              "value": " is:"
            }
          ],
          "type": "paragraph"
        },
        {
          "type": "math",
          "value": "f(x) = \\exp(-x)"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "for "
            },
            {
              "type": "inlineMath",
              "value": "x \\ge 0"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "%(after_notes)s"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "A common parameterization for "
            },
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "expon"
            },
            {
              "type": "text",
              "value": " is in terms of the rate parameter "
            },
            {
              "type": "inlineCode",
              "value": "lambda"
            },
            {
              "type": "text",
              "value": ", such that "
            },
            {
              "type": "inlineCode",
              "value": "pdf = lambda * exp(-lambda * x)"
            },
            {
              "type": "text",
              "value": ". This parameterization corresponds to using "
            },
            {
              "type": "inlineCode",
              "value": "scale = 1 / lambda"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "The exponential distribution is a special case of the gamma distributions, with gamma shape parameter "
            },
            {
              "type": "inlineCode",
              "value": "a = 1"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "%(example)s"
            }
          ],
          "type": "paragraph"
        }
