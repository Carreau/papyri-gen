            {
              "type": "text",
              "value": " and then downsloping for "
            },
            {
              "type": "inlineCode",
              "value": "(loc + c*scale)"
            },
            {
              "type": "text",
              "value": " to "
            },
            {
              "type": "inlineCode",
              "value": "(loc + scale)"
