    "Notes": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "Probability distribution of the difference of two correlated or uncorrelated Poisson random variables."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "Let "
            },
            {
              "type": "inlineMath",
              "value": "k_1"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "k_2"
            },
            {
              "type": "text",
              "value": " be two Poisson-distributed r.v. with expected values "
            },
            {
              "type": "inlineMath",
              "value": "\\lambda_1"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "\\lambda_2"
            },
            {
              "type": "text",
              "value": ". Then, "
            },
            {
              "type": "inlineMath",
              "value": "k_1 - k_2"
            },
            {
              "type": "text",
              "value": " follows a Skellam distribution with parameters "
            },
            {
              "type": "inlineMath",
              "value": "\\mu_1 = \\lambda_1 - \\rho \\sqrt{\\lambda_1 \\lambda_2}"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "\\mu_2 = \\lambda_2 - \\rho \\sqrt{\\lambda_1 \\lambda_2}"
            },
            {
              "type": "text",
              "value": ", where "
            },
            {
              "type": "inlineMath",
              "value": "\\rho"
            },
            {
              "type": "text",
              "value": " is the correlation coefficient between "
            },
            {
              "type": "inlineMath",
              "value": "k_1"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "k_2"
            },
            {
              "type": "text",
              "value": ". If the two Poisson-distributed r.v. are independent then "
            },
            {
              "type": "inlineMath",
              "value": "\\rho = 0"
            },
            {
              "type": "text",
              "value": "."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "Parameters "
            },
            {
              "type": "inlineMath",
              "value": "\\mu_1"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "\\mu_2"
            },
            {
              "type": "text",
              "value": " must be strictly positive."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "For details see: https://en.wikipedia.org/wiki/Skellam_distribution"
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "skellam"
            },
            {
              "type": "text",
              "value": " takes "
            },
            {
              "type": "inlineMath",
              "value": "\\mu_1"
            },
            {
              "type": "text",
              "value": " and "
            },
            {
              "type": "inlineMath",
              "value": "\\mu_2"
            },
            {
              "type": "text",
              "value": " as shape parameters."
            }
          ],
          "type": "paragraph"
        },
        {
