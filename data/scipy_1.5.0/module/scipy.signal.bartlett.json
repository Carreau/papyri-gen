    "Extended Summary": {
      "children": [
        {
          "type": "Paragraph",
          "data": {
            "inline": [
              {
                "type": "Words",
                "data": {
                  "value": "The Bartlett window is very similar to a triangular window, except that the end points are at zero.  It is often used in signal processing for tapering a signal, without generating too much ripple in the frequency domain."
                }
              }
            ],
            "inner": []
          }
        },
        {
          "type": "BlockDirective",
          "data": {
            "lines": {
              "_lines": [
                {
                  "_line": ".. warning:: scipy.signal.bartlett is deprecated,",
                  "_number": 5,
                  "_offset": 0
                }
              ]
            },
            "wh": {
              "_lines": []
            },
            "ind": {
              "_lines": [
                {
                  "_line": "             use scipy.signal.windows.bartlett instead.",
                  "_number": 6,
                  "_offset": 0
                }
              ]
            },
            "directive_name": "warning",
            "args0": [
              " scipy.signal.bartlett is deprecated,"
