            "children": [
              {
                "type": "Words",
                "data": {
                  "value": "Suppose we have (N+1) samples of f at the positions x_0, x_1, ..., x_N. Then an N-point Newton-Cotes formula for the integral between x_0 and x_N is:"
                }
              }
            ]
          }
        },
        {
          "type": "Paragraph",
          "data": {
            "children": [
              {
                "type": "Directive",
                "data": {
                  "value": [
                    "\\int",
                    "_",
                    "{x",
                    "_",
                    "0}^{x",
                    "_",
                    "N}",
                    " ",
                    "f(x)dx",
                    " ",
                    "=",
                    " ",
                    "\\Delta",
                    " ",
                    "x",
                    " ",
                    "\\sum",
                    "_",
                    "{i=0}^{N}",
                    " ",
                    "a",
                    "_",
                    "i",
                    " ",
                    "f(x",
                    "_",
                    "i)",
                    " ",
                    "+",
                    " ",
                    "B",
                    "_",
                    "N",
                    " ",
                    "(\\Delta",
                    " ",
                    "x)^{N+2}",
                    " ",
                    "f^{N+1}",
                    " ",
                    "(\\xi)"
                  ],
                  "domain": null,
                  "role": "math"
                }
              }
            ]
          }
        },
        {
          "type": "Paragraph",
          "data": {
            "children": [
              {
                "type": "Words",
                "data": {
                  "value": "where "
                }
              },
              {
                "type": "Directive",
                "data": {
                  "value": [
                    "\\xi",
                    " ",
                    "\\in",
                    " ",
                    "[x",
                    "_",
                    "0,x",
                    "_",
                    "N]"
                  ],
                  "domain": null,
                  "role": "math"
                }
              },
              {
                "type": "Words",
                "data": {
                  "value": " and "
                }
              },
              {
                "type": "Directive",
                "data": {
                  "value": [
                    "\\Delta",
