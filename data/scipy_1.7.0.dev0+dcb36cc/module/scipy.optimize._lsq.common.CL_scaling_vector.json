          "type": "BlockVerbatim",
          "data": {
            "lines": {
              "_lines": [
                {
                  "_line": "           | ub[i] - x[i], if g[i] < 0 and ub[i] < np.inf",
                  "_number": 2,
                  "_offset": 4
                },
