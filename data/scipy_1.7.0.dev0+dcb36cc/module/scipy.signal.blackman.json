{
  "_content": {
    "Summary": {
      "children": [
        {
          "type": "Paragraph",
          "data": {
            "children": [
              {
                "type": "Words",
                "data": {
                  "value": "Return a Blackman window."
                }
              }
            ]
          }
        }
      ]
    },
    "Extended Summary": {
      "children": [
        {
          "type": "Paragraph",
          "data": {
            "children": [
              {
                "type": "Words",
                "data": {
                  "value": "The Blackman window is a taper formed by using the first three terms of a summation of cosines. It was designed to have close to the minimal leakage possible.  It is close to optimal, only slightly worse than a Kaiser window."
                }
              }
            ]
          }
        },
        {
          "type": "BlockDirective",
          "data": {
            "lines": {
              "_lines": [
                {
                  "_line": ".. warning:: scipy.signal.blackman is deprecated,",
                  "_number": 5,
                  "_offset": 0
                }
              ]
            },
            "wh": {
              "_lines": []
            },
            "ind": {
              "_lines": [
                {
                  "_line": "             use scipy.signal.windows.blackman instead.",
                  "_number": 6,
                  "_offset": 0
                }
              ]
            },
            "directive_name": "warning",
            "args0": [
              " scipy.signal.blackman is deprecated,"
            ],
            "inner": {
              "children": [
                {
                  "type": "Words",
                  "data": {
                    "value": "use scipy.signal.windows.blackman instead."
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "Parameters": {
      "children": [
        {
          "type": "Param",
          "data": {
