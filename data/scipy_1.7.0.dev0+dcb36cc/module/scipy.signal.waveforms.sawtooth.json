              {
                "type": "Words",
                "data": {
                  "value": "The sawtooth waveform has a period "
                }
              },
              {
                "type": "Verbatim",
                "data": {
                  "value": [
                    "2",
                    "*",
                    "pi"
                  ]
                }
              },
              {
                "type": "Words",
                "data": {
                  "value": ", rises from -1 to 1 on the interval 0 to "
