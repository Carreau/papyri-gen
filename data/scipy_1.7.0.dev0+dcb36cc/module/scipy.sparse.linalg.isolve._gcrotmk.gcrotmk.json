                    {
                      "type": "Verbatim",
                      "data": {
                        "value": [
                          "None"
                        ]
                      }
                    },
                    {
                      "type": "Words",
                      "data": {
                        "value": ", in which case the vectors are recomputed via "
                      }
                    },
                    {
                      "type": "Verbatim",
                      "data": {
                        "value": [
                          "c",
                          " ",
                          "=",
                          " ",
                          "A",
                          " ",
                          "u"
                        ]
                      }
                    },
                    {
                      "type": "Words",
                      "data": {
                        "value": " on start and orthogonalized as described in [3]_."
