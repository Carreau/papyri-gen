        {
          "type": "Paragraph",
          "data": {
            "children": [
              {
                "type": "Words",
                "data": {
                  "value": "The coefficients can be found as:"
                }
              }
            ]
          }
        },
        {
          "type": "BlockDirective",
          "data": {
            "lines": {
              "_lines": [
                {
                  "_line": ".. math::",
                  "_number": 21,
                  "_offset": 0
                }
              ]
            },
            "wh": {
              "_lines": [
                {
                  "_line": "",
                  "_number": 22,
                  "_offset": 0
                }
              ]
            },
            "ind": {
              "_lines": [
                {
                  "_line": "    A_n = -a2n / a3n",
                  "_number": 23,
                  "_offset": 0
                },
                {
                  "_line": "    \\qquad",
                  "_number": 24,
                  "_offset": 0
                },
                {
                  "_line": "    B_n = ( a4n / a3n \\sqrt{h_n-1 / h_n})^2",
                  "_number": 25,
                  "_offset": 0
                },
                {
                  "_line": "",
                  "_number": 26,
