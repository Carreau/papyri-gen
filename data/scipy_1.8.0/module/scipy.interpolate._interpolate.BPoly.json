    "Extended Summary": {
      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "The polynomial between "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "x[i]"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " and "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "x[i + 1]"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is written in the Bernstein polynomial basis::      "
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "S = sum(c[a, i] * b(a, k; x) for a in range(k+1)),"
          },
          "type": "BlockVerbatim"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "where "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "k"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is the degree of the polynomial, and::      "
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "b(a, k; x) = binom(k, a) * t**a * (1 - t)**(k - a),"
          },
          "type": "BlockVerbatim"
        },
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "with "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "t = (x - x[i]) / (x[i+1] - x[i])"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " and "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "binom"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is the binomial coefficient."
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        }
      ],
