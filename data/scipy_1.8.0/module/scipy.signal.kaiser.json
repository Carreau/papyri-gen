                  "inline": [
                    {
                      "data": {
                        "value": "Shape parameter, determines trade-off between main-lobe width and side lobe level. As beta gets large, the window narrows."
                      },
                      "type": "Words"
                    }
                  ],
                  "inner": []
                },
                "type": "Paragraph"
              }
