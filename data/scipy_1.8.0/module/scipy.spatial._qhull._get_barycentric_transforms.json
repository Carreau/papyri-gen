        {
          "data": {
            "inline": [
              {
                "data": {
                  "value": "Barycentric transform from "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "x"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " to "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "c"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is defined by::      "
                },
                "type": "Words"
              }
            ],
            "inner": []
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "T c = x - r_n"
          },
          "type": "BlockVerbatim"
        },
        {
          "data": {
            "inline": [
              {
                "data": {
                  "value": "where the "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "r_1, ..., r_n"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " are the vertices of the simplex. The matrix "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "T"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is defined by the condition::      "
                },
                "type": "Words"
              }
            ],
            "inner": []
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "T e_j = r_j - r_n"
          },
          "type": "BlockVerbatim"
        },
        {
          "data": {
            "inline": [
              {
                "data": {
                  "value": "where "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "e_j"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " is the unit axis vector, e.g, "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "e_2 = [0,1,0,0,...]"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " This implies that "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "T_ij = (r_j - r_n)_i"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": "."
                },
                "type": "Words"
              }
            ],
            "inner": []
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "inline": [
              {
                "data": {
                  "value": "For the barycentric transforms, we need to compute the inverse matrix "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "T^-1"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " and store the vectors "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": [
                    "r_n"
                  ]
                },
                "type": "Verbatim"
              },
              {
                "data": {
                  "value": " for each vertex. These are stacked into the "
                },
                "type": "Words"
              },
              {
                "data": {
                  "exists": true,
