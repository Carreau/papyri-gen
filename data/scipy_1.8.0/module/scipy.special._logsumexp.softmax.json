              {
                "data": {
                  "value": "\\sigma(x)"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " for a vector "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "x = \\{x_0, x_1, ..., x_{n-1}\\}"
