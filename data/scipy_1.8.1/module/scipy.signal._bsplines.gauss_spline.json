    "Notes": {
      "children": [
        {
          "data": {
            "children": [
              {
                "data": {
                  "value": "The B-spline basis function can be approximated well by a zero-mean Gaussian function with standard-deviation equal to "
                },
                "type": "Words"
              },
              {
                "data": {
                  "value": "\\sigma=(n+1)/12"
                },
                "type": "Math"
              },
              {
                "data": {
                  "value": " for large "
                },
                "type": "Words"
              },
              {
                "data": {
                  "anchor": null,
                  "exists": true,
                  "kind": "local",
                  "reference": {
                    "kind": "local",
                    "module": null,
                    "path": "n",
                    "version": null
                  },
                  "value": "n"
                },
                "type": "Link"
              },
              {
                "data": {
                  "value": " :"
                },
                "type": "Words"
              }
            ]
          },
          "type": "Paragraph"
        },
        {
          "data": {
            "value": "\\frac{1}{\\sqrt {2\\pi\\sigma^2}}exp(-\\frac{x^2}{2\\sigma})"
          },
          "type": "BlockMath"
        }
      ],
      "level": 0,
