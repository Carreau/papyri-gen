          "children": [
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "The adapted Rand error; equal to "
                    },
                    {
                      "type": "inlineMath",
                      "value": "1 - \\frac{2pr}{p + r}"
                    },
                    {
                      "type": "text",
                      "value": ", where "
                    },
                    {
                      "type": "inlineCode",
                      "value": "p"
                    },
                    {
                      "type": "text",
                      "value": " and "
                    },
                    {
                      "type": "inlineCode",
                      "value": "r"
                    },
                    {
                      "type": "text",
                      "value": " are the precision and recall described below."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "are",
              "type": "Param",
              "type_": "float"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "The adapted Rand precision: this is the number of pairs of pixels that have the same label in the test label image "
                    },
                    {
                      "children": [
                        {
                          "type": "text",
                          "value": "and"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "type": "text",
                      "value": " in the true image, divided by the number in the test image."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "prec",
              "type": "Param",
              "type_": "float"
            },
            {
              "desc": [
                {
                  "children": [
                    {
                      "type": "text",
                      "value": "The adapted Rand recall: this is the number of pairs of pixels that have the same label in the test label image "
                    },
                    {
                      "children": [
                        {
                          "type": "text",
                          "value": "and"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "type": "text",
                      "value": " in the true image, divided by the number in the true image."
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "param": "rec",
              "type": "Param",
              "type_": "float"
            }
          ],
          "type": "Parameters"
        }
