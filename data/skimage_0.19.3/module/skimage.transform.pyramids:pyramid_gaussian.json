    "Extended Summary": {
      "children": [
        {
          "children": [
            {
              "type": "text",
              "value": "Recursively applies the "
            },
            {
              "anchor": null,
              "exists": true,
              "kind": "module",
              "reference": {
                "kind": "module",
                "module": "skimage",
                "path": "skimage.transform.pyramids:pyramid_reduce",
                "type": "RefInfo",
                "version": "0.19.3"
              },
              "type": "Link",
              "value": "pyramid_reduce"
            },
            {
              "type": "text",
              "value": " function to the image, and yields the downscaled images."
            }
          ],
          "type": "paragraph"
        },
        {
          "children": [
            {
              "type": "text",
              "value": "Note that the first image of the pyramid will be the original, unscaled image. The total number of images is "
            },
            {
              "domain": null,
              "role": null,
              "type": "Directive",
              "value": "max_layer + 1"
            },
            {
              "type": "text",
              "value": ". In case all layers are computed, the last image is either a one-pixel image or the image where the reduction does not change its shape."
            }
          ],
          "type": "paragraph"
        }
      ],
      "level": 0,
      "target": null,
      "title": null,
      "type": "Section"
    },
